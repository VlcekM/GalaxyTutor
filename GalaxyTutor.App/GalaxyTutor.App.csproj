<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UserSecretsId>a9b9a821-0279-4a5a-8998-e1eead0aac34</UserSecretsId>
  </PropertyGroup>

  <!-- Tailwind -->
  <Target Name="PreBuild" BeforeTargets="PreBuildEvent">
    <Exec Command="npm run build:css" />
  </Target>
  <ItemGroup>
    <PackageReference Include="InfiniLore.Lucide" Version="0.33.541" />
    <PackageReference Include="LumexUI" Version="2.0.0" />
    <PackageReference Include="MudBlazor" Version="8.11.0" />
    <PackageReference Include="OpenAI" Version="2.3.0" />
  </ItemGroup>

</Project>
